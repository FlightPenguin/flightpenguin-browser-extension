{
  "name": "hinhilla Browser Extension",
  "version": "1.0",
  "description": "Best one in town!",
  "permissions": ["webRequest", "<all_urls>"],
  "background": {
    "page": "background.html",
    "persistent": true // prevents following error "The 'webRequest' API cannot be used with event pages." https://developer.chrome.com/extensions/background_pages#persistentWarning
  },
  "content_scripts": [
    {
      "matches": [
        // TODO break up content script, so each url has it's own file
        "https://www.southwest.com/air/booking/select.html?*",
        "https://www.priceline.com/m/fly/search/*"
      ],
      "js": ["contentScript.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Default title"
  },
  "manifest_version": 2
}
