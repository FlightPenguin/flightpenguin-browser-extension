{
  "name": "Flight Penguin Browser Extension",
  "version": "1.0",
  "description": "Best one in town!",
  "permissions": ["webRequest", "<all_urls>"],
  "background": {
    "page": "background.html",
    "persistent": true // prevents following error "The 'webRequest' API cannot be used with event pages." https://developer.chrome.com/extensions/background_pages#persistentWarning
  },
  "content_scripts": [
    {
      "matches": ["https://www.priceline.com/m/fly/search/*"],
      "js": ["priceline/contentScript.js"]
    },
    {
      "matches": ["https://www.southwest.com/air/booking/select.html?*"],
      "css": ["skyscanner/contentStyles.css"],
      "js": ["southwest/contentScript.js"]
    },
    {
      "matches": ["https://www.southwest.com/air/booking/index.html?*"],
      "js": ["southwest/emptySearchContentScript.js"]
    },
    {
      "matches": ["https://www.skyscanner.com/transport/flights/*"],
      "css": ["skyscanner/contentStyles.css"],
      "js": ["skyscanner/contentScript.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Flight Penguin"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}
